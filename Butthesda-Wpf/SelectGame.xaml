<UserControl x:Class="Butthesda_Wpf.SelectGame"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Butthesda_Wpf"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <RadioButton IsChecked="{Binding Mode=TwoWay, Path=SkyrimSelected}" Content="Skyrim" />
        <RadioButton IsChecked="{Binding Mode=TwoWay, Path=SkyrimSESelected}" Content="Skyrim SE" />
        <RadioButton IsChecked="{Binding Mode=TwoWay, Path=SkyrimVRSelected}" Content="Skyrim VR (testing)" />
        <RadioButton IsChecked="{Binding Mode=TwoWay, Path=Fallout4Selected}" Content="Fallout 4" />
    </StackPanel>
</UserControl>
